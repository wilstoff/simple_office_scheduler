@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="page-title-area">
                @(_pageTitle ?? "")
            </div>
            <button class="theme-toggle" onclick="window.toggleTheme()" title="Toggle theme">
                <span class="theme-icon-dark">&#9788;</span>
                <span class="theme-icon-light" style="display:none">&#9790;</span>
            </button>
            <AuthorizeView>
                <Authorized>
                    <span class="me-3">@context.User.FindFirst("DisplayName")?.Value</span>
                    <a href="logout">Logout</a>
                </Authorized>
                <NotAuthorized>
                    <a href="login">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">&#x2716;</a>
</div>

@code {
    private string? _pageTitle;

    protected override void OnInitialized()
    {
        Navigation.LocationChanged += OnLocationChanged;
        UpdatePageTitle();
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        UpdatePageTitle();
        InvokeAsync(StateHasChanged);
    }

    private void UpdatePageTitle()
    {
        var path = new Uri(Navigation.Uri).AbsolutePath.TrimStart('/').ToLowerInvariant();
        _pageTitle = path switch
        {
            "" or "calendar" => "Calendar",
            "events" => "Events",
            "events/create" => "Create Event",
            "dashboard" => "Dashboard",
            "login" => "Login",
            _ when path.StartsWith("events/") => "Event Details",
            _ => ""
        };
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }
}
