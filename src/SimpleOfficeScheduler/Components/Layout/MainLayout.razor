@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="page-title-area">
                @(_pageTitle ?? "")
            </div>
            <button class="theme-toggle" onclick="window.toggleTheme()" title="Toggle theme">
                <span class="theme-icon-dark">&#9788;</span>
                <span class="theme-icon-light" style="display:none">&#9790;</span>
            </button>
            <AuthorizeView>
                <Authorized>
                    @{
                        var displayName = context.User.FindFirst("DisplayName")?.Value ?? "User";
                        var userIdStr = context.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                        var userId = int.TryParse(userIdStr, out var uid) ? uid : 0;
                        var initials = GetInitials(displayName);
                        var avatarColor = GetAvatarColor(userId);
                    }
                    <a href="settings" class="user-link me-3">
                        <div class="user-avatar-sm" style="background-color: @avatarColor;">@initials</div>
                        <span>@displayName</span>
                    </a>
                    <a href="logout">Logout</a>
                </Authorized>
                <NotAuthorized>
                    <a href="login">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">&#x2716;</a>
</div>

@code {
    private string? _pageTitle;

    protected override void OnInitialized()
    {
        Navigation.LocationChanged += OnLocationChanged;
        UpdatePageTitle();
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        UpdatePageTitle();
        InvokeAsync(StateHasChanged);
    }

    private void UpdatePageTitle()
    {
        var path = new Uri(Navigation.Uri).AbsolutePath.TrimStart('/').ToLowerInvariant();
        _pageTitle = path switch
        {
            "" or "calendar" => "Calendar",
            "events" => "Events",
            "events/create" => "Create Event",
            "settings" => "Settings",
            "login" => "Login",
            _ when path.StartsWith("events/") => "Event Details",
            _ => ""
        };
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private static readonly string[] AvatarColors = new[]
    {
        "#e74c3c", "#e67e22", "#f1c40f", "#2ecc71", "#1abc9c",
        "#3498db", "#9b59b6", "#e91e63", "#00bcd4", "#ff5722",
        "#795548", "#607d8b", "#8bc34a", "#673ab7", "#009688"
    };

    private static string GetInitials(string name)
    {
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        return parts.Length >= 2
            ? $"{parts[0][0]}{parts[^1][0]}".ToUpperInvariant()
            : (parts.Length == 1 ? parts[0][0..Math.Min(2, parts[0].Length)].ToUpperInvariant() : "?");
    }

    private static string GetAvatarColor(int userId)
    {
        return AvatarColors[Math.Abs(userId) % AvatarColors.Length];
    }
}
