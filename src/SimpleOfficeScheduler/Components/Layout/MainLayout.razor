@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject IJSRuntime JS

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <button class="theme-toggle" @onclick="ToggleTheme"
                    title="@(_isDark ? "Switch to light mode" : "Switch to dark mode")">
                @if (_isDark)
                {
                    <span>&#9788;</span>
                }
                else
                {
                    <span>&#9790;</span>
                }
            </button>
            <AuthorizeView>
                <Authorized>
                    <span class="me-3">@context.User.FindFirst("DisplayName")?.Value</span>
                    <a href="logout">Logout</a>
                </Authorized>
                <NotAuthorized>
                    <a href="login">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">&#x2716;</a>
</div>

@code {
    private bool _isDark = true;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var theme = await JS.InvokeAsync<string?>("localStorage.getItem", "theme");
            _isDark = theme != "light";
            StateHasChanged();
        }
    }

    private async Task ToggleTheme()
    {
        _isDark = !_isDark;
        var theme = _isDark ? "dark" : "light";
        await JS.InvokeVoidAsync("localStorage.setItem", "theme", theme);
        if (_isDark)
        {
            await JS.InvokeVoidAsync("eval", "document.documentElement.removeAttribute('data-theme')");
        }
        else
        {
            await JS.InvokeVoidAsync("eval", "document.documentElement.setAttribute('data-theme','light')");
        }
    }
}
