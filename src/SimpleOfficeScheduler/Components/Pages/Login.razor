@page "/login"
@layout MainLayout
@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
@inject SimpleOfficeScheduler.Services.Auth.IAuthenticationService AuthService
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]

<PageTitle>Login - Office Scheduler</PageTitle>

<div class="login-container">
    <div class="login-card card">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <svg viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="width:40px;height:40px;color:var(--accent-primary);">
                    <rect x="1" y="4" width="26" height="23" rx="3" stroke="currentColor" stroke-width="1.8" fill="none"/>
                    <line x1="1" y1="10" x2="27" y2="10" stroke="currentColor" stroke-width="1.5"/>
                    <line x1="8" y1="4" x2="8" y2="1" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <line x1="20" y1="4" x2="20" y2="1" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/>
                    <text x="14" y="22" text-anchor="middle" fill="currentColor" font-family="Arial, sans-serif" font-size="11" font-weight="bold">S</text>
                </svg>
                <h4 class="mt-2 mb-1">Office Scheduler</h4>
                <p class="text-muted mb-0" style="font-size:0.9rem;">Sign in to your account</p>
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger">@_errorMessage</div>
            }

            <EditForm Model="Input" OnValidSubmit="HandleLogin" FormName="login">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <InputText id="username" class="form-control" @bind-Value="Input.Username" />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <InputText id="password" type="password" class="form-control" @bind-Value="Input.Password" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Sign in</button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private LoginModel Input { get; set; } = new();

    private string? _errorMessage;

    private async Task HandleLogin()
    {
        var httpContext = HttpContextAccessor.HttpContext;
        if (httpContext is null) return;

        var result = await AuthService.ValidateAsync(Input.Username, Input.Password);

        if (result.Success && result.User is not null)
        {
            var claims = new List<Claim>
            {
                new(ClaimTypes.NameIdentifier, result.User.Id.ToString()),
                new(ClaimTypes.Name, result.User.Username),
                new("DisplayName", result.User.DisplayName),
                new(ClaimTypes.Email, result.User.Email),
                new("ThemePreference", result.User.ThemePreference)
            };

            var identity = new ClaimsIdentity(claims, "Cookies");
            var principal = new ClaimsPrincipal(identity);

            await httpContext.SignInAsync("Cookies", principal);
            Navigation.NavigateTo("/", forceLoad: true);
        }
        else
        {
            _errorMessage = result.ErrorMessage ?? "Login failed.";
        }
    }

    private class LoginModel
    {
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}
