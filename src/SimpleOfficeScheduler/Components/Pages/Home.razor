@page "/"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Home - Office Scheduler</PageTitle>

<h1>Office Hours Scheduler</h1>

<p>Welcome to the Office Hours Scheduler. Use the navigation to browse and sign up for events.</p>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Browse Events</h5>
                <p class="card-text">View all available office hours and search for events.</p>
                <a href="events" class="btn btn-primary">View Events</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Calendar View</h5>
                <p class="card-text">See upcoming events in a weekly calendar view.</p>
                <a href="calendar" class="btn btn-primary">View Calendar</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Create Event</h5>
                <p class="card-text">Schedule new office hours for others to sign up.</p>
                <a href="events/create" class="btn btn-primary">Create Event</a>
            </div>
        </div>
    </div>
</div>
